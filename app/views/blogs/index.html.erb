<%= render 'header' %>

<% @blogs.each do |blog| %>  

    <!--start content-->
    <div id="content-wrapper">
    
        <section class="pages clearfix">
        
          <!--start section title-->
            <div id="section-title">
                <h1>Nihilizm</h1>
                <h1>cynizm, sarkazm</h1>
                <h1>orgazm & IT</h1>
            </div>
            
          <!--start content left-->
            <div class="content-inner-left">
       
                    <article class="blog-post">
                          
                          <div class="blog-post-content">
                          
                          <div class="blog-post-featured-media">
                               
                               <div class="thumb">
                                    <a href="#" data-logo="assets/rails.png">
                                        <img src="assets/rails.png" alt="" />
                                    </a>
                                </div> 

                          </div>

                            <h2 class="blog-post-title"><%= blog.title %></h2><br />
                            <p>
                            <%= blog.content %>
                            </p>
                            <!-- <a class="readMore" href="#">Read More &rarr;</a>  -->

                        </div>

                  </article>       
                 
                </div>  
                
            </div>
            <!--end blog content-->
        </section>
    </div>

  </div>  

<% if admin_signed_in? %>        
    <td><%= link_to 'Show', blog %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>        
<% end %>

<% end %>
